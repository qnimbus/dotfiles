format = "[$duration]($style) "
style = "yellow"

[python]
format = "[$virtualenv]($style) "
style = "bright-black"
{{- else }}
format = """
[](#9A348E)\
$os\
$username\
[](bg:#DA627D fg:#9A348E)\
$directory\
[](fg:#DA627D bg:#FCA17D)\
$git_branch\
$git_status\
[](fg:#FCA17D bg:#86BBD8)\
$c\
$elixir\
$elm\
$golang\
$gradle\
$haskell\
$java\
$julia\
$nodejs\
$nim\
$rust\
$scala\
{{- if or $isLinux $isDarwin }}
$kubernetes\
{{- end }}
[](fg:#86BBD8 bg:#06969A)\
$docker_context\
[](fg:#06969A bg:#33658A)\
$time\
[ ](fg:#33658A)\
"""

# Username stays the same everywhere
[username]
show_always = true
style_user = "bg:#9A348E"
style_root = "bg:#9A348E"
format = '[$user ]($style)'
disabled = false

# OS badge: tiny visual cue per OS
[os]
style = "bg:#9A348E"
{{- if $isWindows }}
format = "[  ]($style)"
disabled = false
{{- else if $isDarwin }}
format = "[  ]($style)"
disabled = false
{{- else if $isLinux }}
format = "[  ]($style)"
disabled = false
{{- else }}
disabled = true
{{- end }}

[directory]
style = "bg:#DA627D"
format = "[ $path ]($style)"
{{- if $isWindows }}
truncation_length = 4
{{- else }}
truncation_length = 3
{{- end }}
truncation_symbol = "…/"

# [directory.substitutions]
# "Documents" = "󰈙 "
# "Downloads" = " "
# "Music" = " "
# "Pictures" = " "

[git_branch]
symbol = ""
style = "bg:#FCA17D"
format = '[ $symbol $branch ]($style)'

[git_status]
style = "bg:#FCA17D"
format = '[$all_status$ahead_behind ]($style)'

# (Optional) Kube context on Unix; comment out if you don’t want it
[kubernetes]
symbol = "☸"
style = "bg:#86BBD8 fg:black"
disabled = {{ not (or $isLinux $isDarwin) }}
format = "[ $symbol $context ]($style)"

[docker_context]
symbol = " "
style = "bg:#06969A"
format = '[ $symbol $context ]($style)'

[time]
disabled = false
time_format = "%R"
style = "bg:#33658A"
format = '[ ♥ $time ]($style)'

